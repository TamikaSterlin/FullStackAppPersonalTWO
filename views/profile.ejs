    </div>
    <div class="box">
      <ul class="messages">
        <% for(var i=0; i<messages.length; i++) {%>
        <li class="message">
          <img src="<%= messages[i].img %>" alt="pic">
          <span><%= messages[i].msg %></span>
          <span><%= messages[i].thumbUp %></span>
          <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
        </li>
        <% } %>
      </ul>


      <% if (user.local.email) { %>
      <form class="formTwo" action="/messages" method="POST" enctype="multipart/form-data">
        <p> <input class="chooseFile" type="file" name="file"></p>
        <input class="picMessage" type="text" placeholder="Picture Description" name="msg">
        <p> <input type="submit" name="submit" value="upload"></p>
      </form>
    </div>
    <% } %>

  </div>

  <script src="main.js"></script>

